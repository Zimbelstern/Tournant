<resources>

	<style name="Theme.Tournant" parent="Theme.MaterialComponents.DayNight">

		<!-- Primary colors -->
		<item name="colorPrimary">@color/blue_dark</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary colors -->
		<item name="colorSecondary">@color/blue</item>
		<item name="colorOnSecondary">@color/white</item>

		<!-- Bar colors -->
		<item name="actionBarStyle">@style/Tournant.ActionBar</item>
		<item name="actionBarTheme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
		<item name="actionModeStyle">@style/Tournant.ActionMode</item>
		<item name="android:statusBarColor">@color/bar_color</item>
		<item name="android:navigationBarColor">@color/bar_color</item>

		<!-- Surfaces -->
		<item name="colorSurface">@color/light_surface</item>
		<item name="android:windowBackground">@color/bar_color</item>
		<item name="materialCardViewStyle">@style/Tournant.CardViewStyle</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>

		<!-- Dialogs -->
		<item name="materialAlertDialogTheme">@style/Theme.Tournant.Dialog</item>

	</style>

	<style name="Theme.Tournant.NoActionBar" parent="Theme.Tournant">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="Theme.Tournant.Splash" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/surface</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
		<item name="postSplashScreenTheme">@style/Theme.Tournant.NoActionBar</item>
	</style>

	<style name="h" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/heading_color</item>
		<item name="fontFamily">@font/quicksand_bold</item>
	</style>

	<style name="h1" parent="@style/h">
		<item name="android:textSize">24sp</item>
	</style>

	<style name="h2" parent="@style/h">
		<item name="android:textSize">21sp</item>
	</style>

	<style name="h3" parent="@style/h">
		<item name="android:textSize">18sp</item>
	</style>

	<!-- Action bar color -->
	<style name="Tournant.ActionBar" parent="Theme.Tournant">
		<item name="background">@color/bar_color</item>
	</style>

	<style name="Tournant.ActionMode" parent="Widget.AppCompat.ActionMode">
		<item name="background">@color/bar_color</item>
		<item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
	</style>

	<!-- For light and dark theme -->
	<style name="Tournant.CardViewStyle" parent="Theme.Tournant">
		<item name="cardBackgroundColor">?attr/colorSurface</item>
	</style>

	<!-- Custom TextInputLayouts with smaller padding -->
	<style name="Tournant.TextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
		<item name="materialThemeOverlay">@style/ThemeOverlayOutlinedDense</item>
	</style>

	<style name="ThemeOverlayOutlinedDense">
		<item name="editTextStyle">@style/TextInputEditText.OutlinedBox.Dense</item>
	</style>

	<style name="TextInputEditText.OutlinedBox.Dense" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<!-- Custom TextInputLayouts (with dropdown menu) with smaller padding -->
	<style name="Tournant.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
		<item name="materialThemeOverlay">@style/ThemeOverlayOutlinedDenseExposedDropdownMenu</item>
	</style>

	<style name="ThemeOverlayOutlinedDenseExposedDropdownMenu">
		<item name="autoCompleteTextViewStyle">@style/TextInputEditText.OutlinedBox.Dense.ExposedDropdownMenu</item>
	</style>

	<style name="TextInputEditText.OutlinedBox.Dense.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense">
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<!-- MaterialAlertDialog theme -->
	<style name="Theme.Tournant.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<item name="materialAlertDialogTitleTextStyle">@style/DialogTitleText</item>
		<item name="materialAlertDialogBodyTextStyle">@style/DialogBodyText</item>
	</style>

	<style name="DialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
		<item name="android:textAppearance">@style/h</item>
		<item name="android:textColor">@color/heading_color</item>
	</style>

	<style name="DialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
		<item name="android:textSize">16sp</item>
		<item name="android:lineSpacingExtra">4sp</item>
	</style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginVertical="1sp">

	<TextView
		android:id="@+id/ingredient_group_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size_text"
		android:textStyle="bold"/>

	<LinearLayout
		android:id="@+id/ingredient_amount"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="end">

		<eu.zimbelstern.tournant.utils.CheckableTextView
			android:id="@+id/ingredient_amount_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_size_text"/>

		<eu.zimbelstern.tournant.utils.CheckableTextView
			android:id="@+id/ingredient_amount_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_size_text"/>

	</LinearLayout>

	<eu.zimbelstern.tournant.utils.CheckableTextView
		android:id="@+id/ingredient_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size_text"
		android:drawablePadding="4sp"
		app:drawableEndCompat="@drawable/ic_checked"
		app:drawableTint="@color/transparent"
		tools:text="Ingredient"/>

</LinearLayout>
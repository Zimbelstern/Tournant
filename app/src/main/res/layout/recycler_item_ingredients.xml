<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:id="@+id/recycler_item_ingredients_amount"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="end">

		<TextView
			android:id="@+id/recycler_item_ingredients_amount_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/recycler_item_ingredients_amount_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

	<TextView
		android:id="@+id/recycler_item_ingredients_item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>
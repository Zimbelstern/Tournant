<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center"
	android:padding="16dp"
	android:background="@drawable/background_repeat"
	tools:ignore="Overdraw">

	<ImageView
		android:layout_width="92dp"
		android:layout_height="92dp"
		android:importantForAccessibility="no"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleX="1.4"
		android:scaleY="1.4"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginEnd="8dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			tools:ignore="UseCompoundDrawables">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tournant"
				android:textSize="26sp"
				style="@style/h"/>

			<ImageView
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:importantForAccessibility="no"
				android:src="@drawable/zimbelstern"/>

		</LinearLayout>

		<!--suppress AndroidDomInspection -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="2sp"
			android:layout_marginTop="-4dp"
			android:text="@string/versionName"
			android:textColor="@color/highlight_color"
			android:textSize="20sp"
			style="@style/h"/>

		<TextView
			android:id="@+id/build_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/surface"
			android:background="@drawable/round_corners"
			android:backgroundTint="@color/normal_text_color"
			android:paddingHorizontal="4sp"
			android:layout_margin="2dp"
			android:text="@string/buildDate"
			android:textSize="12sp"
			android:visibility="gone"
			tools:visibility="visible"/>

	</LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	android:padding="32dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="16dp"
		android:background="@drawable/round_corners"
		android:backgroundTint="?attr/colorSurface"
		android:text="@string/choose_file_long"/>

	<TextView
		android:id="@+id/choose_file"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:padding="16dp"
		android:background="@drawable/round_corners"
		android:backgroundTint="?attr/colorSurface"
		android:text="@string/choose_file"
		android:textColor="@color/heading_color"
		android:textSize="20sp"
		android:textStyle="bold"
		android:drawablePadding="8dp"
		app:drawableStartCompat="@drawable/ic_cookie"
		app:drawableTint="@color/heading_color"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="16dp"
		android:background="@drawable/round_corners"
		android:backgroundTint="?attr/colorSurface">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/file_modes_explanation"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/preview"
			android:textColor="@color/highlight_color"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/preview_explanation"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/import_"
			android:textColor="@color/highlight_color"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/import_explanation"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/link"
			android:textColor="@color/highlight_color"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/link_explanation_1"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/link_explanation_2"
			android:textStyle="italic"/>

	</LinearLayout>

</LinearLayout>

<resources>

	<style name="Theme.Tournant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

		<!-- Primary colors -->
		<item name="colorPrimary">@color/amber_dark</item>
		<item name="colorOnPrimary">@color/black</item>

		<!-- Secondary colors -->
		<item name="colorSecondary">@color/amber</item>
		<item name="colorOnSecondary">@color/white</item>

		<!-- Bar colors -->
		<item name="actionBarStyle">@style/Tournant.ActionBar</item>
		<item name="actionModeStyle">@style/Tournant.ActionMode</item>
		<item name="android:statusBarColor">@color/blue_darker</item>
		<item name="android:navigationBarColor">@color/blue_darker</item>

		<!-- Surfaces -->
		<item name="colorSurface">@color/dark_surface</item>
		<item name="android:windowBackground">?attr/colorSurface</item>
		<item name="materialCardViewStyle">@style/Tournant.CardViewStyle</item>

	</style>

	<style name="Theme.Tournant.Splash" parent="Theme.SplashScreen.IconBackground">
		<item name="windowSplashScreenBackground">@color/dark_surface</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
		<item name="postSplashScreenTheme">@style/Theme.Tournant.KitchenBackground</item>
	</style>

	<color name="bar_color">@color/blue_dark</color>
	<color name="heading_color">@color/blue_light</color>
	<color name="subtitle_color">@color/blue_light_pale</color>
	<color name="highlight_color">@color/amber</color>
	<color name="normal_text_color">@color/light_gray</color>
	<color name="checked_text_color">@color/light_gray_alpha</color>

</resources>